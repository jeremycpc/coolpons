<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="shortcut icon" type="image/png" href="https://img.icons8.com/ios/50/000000/campfire-filled.png"/>    
    <link rel="stylesheet" href="css/style.css" />

    <title>Coolpons</title>
  </head>
  <body>
    <div class="container">
      <h1 class="text-center">COOLPONS</h1>
      <div id="flipdown" class="flipdown center"></div>
      <div class="coolpons" style="display: none">
        <h3 class="text-center">Hey babe, use your mouse/finger to scratch a card to get a prize!</h3>
        <% coolpons.map((coolpon, index) => { %>
          <div class="scratch-card-container" id= <%= "js-container-" + index %>>
              <% if (!coolpon.claimed) { %>
                <canvas class="canvas" id= <%= "js-canvas-" + index %> width="294" height="294"></canvas>
              <% } %>
              
              <div class="coolpon" style="visibility: hidden;" data-id= <%= index + 1 %>>
                <p><%= coolpon.detail %></p>
                <button class= "btn <%= coolpon.claimed ? 'btn-danger disabled' : 'btn-primary claim' %>">
                  <%= coolpon.claimed ? 'Claimed' : 'Claim!' %>
                </button>
              </div>
          </div>
        <% }) %>
      </div>
    </div>

    <script src="jquery.min.js"></script>    
    <script src="js/main.js"></script>
    <script src="js/plugins.js"></script>
    <script src="popper.min.js"></script>
    <script language="javascript" src="js/bootstrap.min.js"></script>
  </body>
</html>
